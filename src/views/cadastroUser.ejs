                    </ul>

            </nav>
        </header>
        <main>



            <form method="POST" action="/login/cadastro" enctype="">
                <div class="field-container">

                    <div class="esquerdo-container">
                        <fieldset class="field-left">


                            <legend>Dados Pessoais</legend>

                            <div class="nome">
                                <input type="text" name="nome" id="nome" placeholder="Nome" required>
                                <input type="text" name="sobrenome" id="sobrenome" placeholder="Sobrenome" required>

                                <label for="gender" class="gender-label">
                                    <select name="gender" id="gender" >
                                        <option value="masculino" selected>Masculino</option>
                                        <option value="feminino">Feminino</option>
                                        <option value="não declarar">Não declarar</option>
                                    </select>
                                   </label>

                            </div>

                            <div id="nascimento">
                                <span for="Nascimento">Nasc.</span>
                                <input type="date" name="data" id="data" placeholder="Data de nascimento" class="data"
                                    required>
                                <input type="text" name="CPF" id="CPF" placeholder="Digite seu CPF" class="input1  cpf"
                                    required>
                                <input type="text" name="RG" id="RG" placeholder="Digite seu RG" class="input1  rg"
                                    required>
                            </div>
                            <div class="tels">

                                <input type="tel" name="telefone" id="telefone" placeholder="Telefone" required>
                                <input type="tel" name="celular" id="celular" placeholder="Celular" required>
                            </div>
                            <div class="emails">

                                <input type="email" name="username" id="email" placeholder="E-Mail" class="input1  "
                                    required>
                                <input type="email" name="username1" id="email2" placeholder="repita seu E-Mail"
                                    class="input1  " required>
                            </div>
                            <div class="senha">

                                <input type="password" name="senha" id="senha" placeholder="Digite uma senha"
                                    class="input1 " required>
                                <input type="password" name="senha2" id="senha2" placeholder="Repita sua senha"
                                    class="input1  " required>
                            </div>

                        </fieldset>
                    </div>




                    <!-- lado direito -->

                    <div class="direito-container">
                        <div class="endereco">
                            <fieldset class="field-endereco">

                                <legend>Endereço de cadastro</legend>


                                <input type="text" name="CEP" id="CEP" placeholder="Insira seu CEP" required>
                                <input type="text" name="endereco" id="endereco" placeholder="endereço" required>

                                <input type="text" name="numero" id="numero" placeholder="Número" required>
                                <input type="text" name="complemento" id="complemento" placeholder="Complemento"
                                    required>
                                


                                <input type="text" name="bairro" id="bairro" placeholder="Bairro" required>
                                <input type="text" name="referencia" id="referencia" placeholder="Referência" required>


                                <input type="text" name="city" id="cidade" placeholder="Cidade" required>
                                <select name="estado" id="estado"  required>
                                    <option value="" disabled selected>ESTADO</option>
                                    <option value="acre">Acre</option>
                                    <option value="amazonia">Amazônia</option>
                                    <option value="amapa">Amapá</option>
                                    <option value="bahia">Bahia</option>
                                </select>

                                <select name="pais" id="pais"  required>
                                    <option value="" disabled selected>PAÍS</option>
                                    <option value="australia">Austrália</option>
                                    <option value="brasil">Brasil</option>
                                    <option value="canada">Canadá</option>
                                    <option value="dinamarca">Dinamarca</option>
                                </select>



                            </fieldset>
                        </div>
                        <div class="entrega">

                            <fieldset class="field-endereco-entrega">

                                <legend>Endereco de entrega</legend>


                                <input type="text" name="CEP entrega" id="CEP" placeholder="Insira seu CEP" required>
                                <input type="text" name="endereco entrega" id="endereco" placeholder="endereço" required>


                                <input type="text" name="numero entrega" id="numero2" placeholder="Número" required>
                                <input type="text" name="complemento entrega" id="complemento" placeholder="Complemento"
                                    required>


                                <input type="text" name="bairro entrega" id="bairro" placeholder="Bairro" required>
                                <input type="text" name="referencia entrega" id="referencia" placeholder="Referência" required>


                                <input type="text" name="city entrega" id="cidade" placeholder="Cidade" required>

                                <select name="estado entrega" id="estado"  required>
                                    <option value="" disabled selected>ESTADO</option>
                                    <option value="acre">Acre</option>
                                    <option value="amazonia">Amazônia</option>
                                    <option value="amapa">Amapá</option>
                                    <option value="bahia">Bahia</option>
                                </select>

                                <select name="pais entrega" id="pais"  required>
                                    <option value="" disabled selected  >PAÍS</option>

                                    <option value="australia">Austrália</option>
                                    <option value="brasil">Brasil</option>
                                    <option value="canada">Canadá</option>
                                    <option value="dinamarca">Dinamarca</option>
                                </select>



                            </fieldset>
                        </div>

                    </div>

                    <div class="meet-options-container">

                        <label for="meet" class="option-label">Como conheceu a DomGames?

                            <select name="Conheceu" id="meet"  required>
                                 <option value="Google" selected>Google</option>
                                <option value="face">Facebook</option>
                                <option value="Insta">Instagram</option>
                                <option value="others">Outros</option>
                            </select>
                        </label>
                        <div class="confirmar">
                            <label for="Confirmar">
